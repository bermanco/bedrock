{
  "name": "bermanco/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "Berman and Company's WordPress Stack (forked from Bedrock)",
  "homepage": "http://www.bermanco.com",
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "git",
      "url": "https://github.com/bermanco/posts-2-posts-adapter.git"
    },
    {
      "type": "git",
      "url": "https://github.com/bermanco/extended-timber-classes.git"
    }
  ],
  "require": {
    "php": ">=5.5",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.4.2",
    "oscarotero/env": "^1.0",
    "timber/timber": "dev-master",
    "webdevstudios/cpt-core": "^1.0",
    "webdevstudios/cmb2": "^2.1",
    "wpackagist-plugin/easy-wp-smtp": "^1.2",
    "bermanco/posts-2-posts-adapter": "dev-master",
    "bermanco/bac-timber-classes": "dev-master",
    "wpackagist-plugin/posts-to-posts": "^1.6"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin", "webdevstudios/cpt-core", "webdevstudios/cmb2", "wpackagist-plugin/posts-to-posts"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
